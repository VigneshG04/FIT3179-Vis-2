{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {"url": "HDI_Filtered_2021.csv"},
    "title": {
        "text": "HDI vs Gender Inequality",
        "fontSize": 24,
        "font": "Trebuchet MS"
    },
    "height":  "container",
    "width": "container",
    "background": "#e7f0ff",
    "params": [
        {
            "name": "continent_select",
            "bind": {
                "input": "select",
                "options": [
                    null, 
                    "Africa",
                    "Asia",
                    "Europe",
                    "Oceania",
                    "North America",
                    "South America"
                ],
                "labels": [
                    "Show All",
                    "Africa",
                    "Asia",
                    "Europe",
                    "Oceania",
                    "North America",
                    "South America"
                ],
                "name": "Select Continent: "
            }
        }
    ],
    "transform": [
        {"filter": "continent_select == null || datum.Continent == continent_select"}
    ],
    "encoding": {
        "x": {
            "field": "Gender Inequality Index (2021)",
            "type": "quantitative", 
            "title": "Gender Inequality Index (2021)",
            "scale": {"type": "linear"}
        },
        "y": {
            "field": "Human Development Index (2021)", 
            "type": "quantitative",
            "scale": {"domain": [0, 1]}
        }
    },
    "layer": [
        {
            "mark": "circle",
            "encoding": {
                "color": {
                    "condition": [
                        {
                            "test": "datum['Gender Inequality Index (2021)'] == 0",
                            "value": "transparent"
                        }
                    ],
                    "field": "Continent",
                    "type": "nominal",
                    "scale": {
                        "domain": [
                        "Africa",
                        "Asia",
                        "Europe",
                        "Oceania",
                        "North America",
                        "South America"
                        ],
                        "range": [
                            "#e41a1c",
                            "#984ea3",
                            "#ff7f00",
                            "#00ff00",
                            "#377eb8",
                            "#a65628"
                        ]
                    }
                },
                "size": {"value": 65},
                "tooltip": [
                    {"field": "Country", "title": "Country", "type": "nominal"},
                    {"field": "Human Development Index (2021)", "title": "2021 HDI", "type": "quantitative"},
                    {"field": "Gender Inequality Index (2021)", "title": "GII (2021)", "type": "quantitative"}
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "left",
                "baseline": "middle",
                "dx": 5,
                "fontSize": 12,
                "fontStyle": "italic"
            },
            "transform": [
                {"filter": "datum['Country'] == 'Tonga' || datum['Country'] ==  'South Sudan' || datum['Country'] == 'Qatar' || datum['Country'] == 'United States' || datum['Country'] == 'Yemen' || datum['Country'] == 'Papua New Guinea' || datum['Country'] == 'Rwanda'"}
            ],
            "encoding": {
                "text": {"field": "Country", "type": "nominal"},
                "color": {"value": "black"}
                
            }
        }  
    ]
}