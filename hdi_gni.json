{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {"url": "HDI_Filtered_2021.csv"},
    "title": {
        "text": "HDI vs Gross National Income",
        "fontSize": 24,
        "font": "Trebuchet MS"
    },
    "height":  "container",
    "width": "container",
    "background": "#e7f0ff",
    "params": [
        {
            "name": "continent_select",
            "bind": {
                "input": "select",
                "options": [
                    null, 
                    "Africa",
                    "Asia",
                    "Europe",
                    "Oceania",
                    "North America",
                    "South America"
                ],
                "labels": [
                    "Show All",
                    "Africa",
                    "Asia",
                    "Europe",
                    "Oceania",
                    "North America",
                    "South America"
                ],
                "name": "Select Continent: "
            }
        },
        {
            "name": "gni_slider",
            "value": 0,
            "bind": {
                "input": "range",
                "min": 0,
                "max": 140000,
                "step": 10000,
                "name":"Minimum GNI/capita: "
            }
    }
    ],
    "transform": [
        {"filter": "continent_select == null || datum.Continent == continent_select"},
        {"filter": "datum.GNI_C_round > gni_slider"}
    ],
    "encoding": {
        "x": {
            "field": "GNI_C_round",
            "type": "quantitative", 
            "title": "Gross National Income per Capita (USD)",
            "scale": {
                "domain": {"param": "gni_slider"}
            },
            "axis": {
                "labelFontSize": 15,
                "labelFont": "Trebuchet MS",
                "tickCount": 10,
                "titleFontSize": 20,
                "titleFont": "Trebuchet MS"
            }
        },
        "y": {
            "field": "Human Development Index (2021)", 
            "type": "quantitative",
            "scale": {"domain": [0, 1]},
            "axis": {
                "labelFontSize": 15,
                "labelFont": "Trebuchet MS",
                "titleFontSize": 20,
                "titleFont": "Trebuchet MS"
            }
        }
    },
    "layer": [
        {
            "mark": "circle",
            "encoding": {
                "color": {
                    "field": "Continent",
                    "type": "nominal",
                    "legend": {
                        "title": "Continent",
                        "titleFontSize": 15,
                        "titleFont": "Trebuchet MS",
                        "labelFontSize": 11,
                        "labelFont": "Trebuchet MS",
                        "symbolSize": 150
                    },
                    "scale": {
                        "domain": [
                        "Africa",
                        "Asia",
                        "Europe",
                        "Oceania",
                        "North America",
                        "South America"
                        ],
                        "range": [
                            "#e41a1c",
                            "#984ea3",
                            "#ff7f00",
                            "#00ff00",
                            "#377eb8",
                            "#a65628"
                        ]
                    }
                },
                "size": {"value": 65},
                "tooltip": [
                    {"field": "Country", "title": "Country", "type": "nominal"},
                    {"field": "Human Development Index (2021)", "title": "2021 HDI", "type": "quantitative"},
                    {"field": "GNI_C_round", "title": "2021 GNI per Capita ($USD)", "type": "quantitative"}
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "left",
                "baseline": "middle",
                "dx": 5,
                "fontSize": 12,
                "font": "Trebuchet MS",
                "fontStyle": "italic"
            },
            "transform": [
                {"filter": "datum['Country'] == 'Liechtenstein' || datum['Country'] ==  'South Sudan' || datum['Country'] == 'Qatar' || datum['Country'] == 'United States' || datum['Country'] == 'Switzerland'"}
            ],
            "encoding": {
                "text": {"field": "Country", "type": "nominal"},
                "color": {"value": "black"}
                
            }
        }  
    ]
}